<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_guide_line_demo"
        tools:context=".GuideLineDemoActivity">

    <TextView
            android:padding="50dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Guideline Demos"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnGuideLineWithTapTarget"
            android:textSize="16dp"
            android:padding="20dp"
            android:text="Guideline with Tap Target"
            android:onClick="guidelineWithTapTarget"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnGuideLineWithSpotlight"
            android:textSize="16dp"
            android:padding="20dp"
            android:text="Guideline with Spotlight"
            android:onClick="guidelineWithSpotlight"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>